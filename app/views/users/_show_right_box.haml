      - if @items.present?
        .user-mypage__images
          - @items.last(5).each do |item|
            = link_to "/items/#{item.id}", method: :get, class:"item-list" do
              .item-list__box
                .item-list__box--image
                  = image_tag item.images.first.image.url, class: "image"
                .item-list__box--name
                  = item.name
                .item-list__box--price
                  = "#{item.price}円"
        .user-mypage__btn
          = link_to "一覧を見る", "#", class: "btn"
