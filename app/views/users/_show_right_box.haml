.user-mypage
  .user-mypage__header
    %a{hlef: "#"}
      %div
        = image_tag '//static.mercdn.net/images/member_photo_noimage_thumb.png', width: 60, height:60
      %h2
        = current_user.nickname
      .user-status
        %div
          評価
          %span
            0
        .products-number
          出品数
          %span
            #{@sellers.length}
  %ul.user-mypage__tabs
    %li
      = link_to "お知らせ", "#", remote: true, class: "tab white-tab"
    %li
      = link_to "やること", "#", remote: true, class: "tab"
  %ul.user-mypage__messages
    %li.container.show
      お知らせはありません
    %li.container
      やることはありません
  .user-mypage__btn
    = link_to "一覧を見る", "#", class: "btn"

  .user-mypage__purchase
    購入した商品
  %ul.user-mypage__tabs
    %li
      = link_to "過去の取引", "#", remote: true, class: "tab-2 white-tab-2"
    %li
      = link_to "取引中", "#", remote: true, class: "tab-2"
